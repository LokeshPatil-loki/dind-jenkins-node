pipeline {
  agent {
    docker { image 'node:16' }
  }
  stages {
    stage('Checkout') {
        steps {
            checkout scm
        }
    }
    stage('build') {
      steps {
          echo "Installing Dependencies"
          sh 'npm install'
      }
    }
    stage("test") {
        steps {
            sh "npm test"
        }
    }
    stage("Done") {
        steps {
            sh "Pipeline executed"
        }
    }
  }
}