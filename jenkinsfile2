pipeline {
  agent {
    docker { image 'node:16' }
  }
  stages {
    stage('Checkout') {
        steps {
            checkout scm
        }
    }
    stage('build') {
      steps {
          echo "Installing Dependencies"
          sh 'npm install'
      }
    }
    stage("test") {
        steps {
            sh "npm test"
        }
    }
    stage("SyncSecutiry"){
      echo 'Scanning using Synk Security...'
      snykSecurity(
          snykInstallation: '',
          snykTokenId: '$SYNK-TOKEN',
      )
    }
  }
}